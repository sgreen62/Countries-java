package countriesList;

import java.util.ArrayList;
import java.util.Collections;

public class CountriesList {
    private ArrayList<String> countries = new ArrayList<>();

    public void displayWelcomeMessage() {
        System.out.println("Welcome to the Countries List App!");
    }

    public void displayMenu() {
        System.out.println("\nMenu:");
        System.out.println("1. Display Countries");
        System.out.println("2. Add a Country");
        System.out.println("3. Exit");
        System.out.print("Choose an option: ");
    }

    public int getMenuOption(java.util.Scanner scanner) {
        int option = 0;
        try {
            option = Integer.parseInt(scanner.nextLine());
        } catch (NumberFormatException e) {
            System.out.println("Invalid input. Please enter a number.");
        }
        return option;
    }

    public boolean checkForCountry(String country) {
        for (String c : countries) {
            if (c.equalsIgnoreCase(country.trim())) {
                return true;
            }
        }
        return false;
    }

    public void addCountry(String country) {
        country = cleanInput(country);
        if (checkForCountry(country)) {
            System.out.println("That country is already in the list.");
        } else {
            countries.add(country);
            System.out.println("Country added successfully.");
        }
    }

    public void listCountries() {
        if (countries.isEmpty()) {
            System.out.println("No countries added yet.");
        } else {
            Collections.sort(countries);
            System.out.println("\nList of Countries:");
            for (String country : countries) {
                System.out.println("- " + country);
            }
        }
    }

    // Helper method to clean up input (capitalizes nicely)
    private String cleanInput(String input) {
        input = input.trim().toLowerCase();
        return input.substring(0, 1).toUpperCase() + input.substring(1);
    }
}
