package countriesList;

import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class CountriesList {
    private ArrayList<String> countries = new ArrayList<>();
    private int menuOption;

    public void displayWelcomeMessage() {
        System.out.println("Welcome to the Countries List Program!");
    }

    public void displayMenu() {
        System.out.println("\nMenu:");
        System.out.println("1. Display countries");
        System.out.println("2. Add a country");
        System.out.println("3. Exit");
        System.out.print("Enter your choice: ");
    }

    public int getMenuOption(Scanner scanner) {
        while (!scanner.hasNextInt()) {
            System.out.print("Please enter a number (1-3): ");
            scanner.next();
        }
        menuOption = scanner.nextInt();
        scanner.nextLine(); // clear newline
        return menuOption;
    }

    public boolean checkForCountry(String name) {
        for (String country : countries) {
            if (country.equalsIgnoreCase(name)) {
                return true;
            }
        }
        return false;
    }

    public void addCountry(String name) {
        if (checkForCountry(name)) {
            System.out.println(name + " is already in the list.");
        } else {
            countries.add(name);
            System.out.println(name + " has been added.");
        }
    }

    public void listCountries() {
        if (countries.isEmpty()) {
            System.out.println("No countries to display.");
        } else {
            Collections.sort(countries);
            System.out.println("Countries List:");
            for (String country : countries) {
                System.out.println("- " + country);
            }
        }
    }
}
